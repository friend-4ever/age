<div class="container">
    <h2>Age Calculator</h2>
    <label for="dob" style="display:block; text-align:left; margin-bottom:5px; font-weight:bold;">Apna Date of Birth dalein:</label>
    <input type="date" id="dob">
    <button onclick="calculateAge()">Check Age</button>

    <div class="result" id="resultBox">
        <p id="exactAge"></p>
        <hr>
        <p id="status18"></p>
    </div>
</div>

<script>
    function calculateAge() {
        // 1. Input Value Lena
        var dobInput = document.getElementById("dob").value;
        var resultBox = document.getElementById("resultBox");
        
        if (!dobInput) {
            alert("Kripya pehle Date of Birth select karein!");
            return;
        }

        // 2. Dates banana
        var dob = new Date(dobInput);
        var now = new Date();

        // 3. Age Calculation (Years, Months, Days)
        var years = now.getFullYear() - dob.getFullYear();
        var months = now.getMonth() - dob.getMonth();
        var days = now.getDate() - dob.getDate();

        // Adjustments agar mahina/din negative ho
        if (days < 0) {
            months--;
            // Pichle mahine ke din add karna
            var prevMonth = new Date(now.getFullYear(), now.getMonth(), 0);
            days += prevMonth.getDate();
        }
        if (months < 0) {
            years--;
            months += 12;
        }

        // 4. Output: Exact Age
        document.getElementById("exactAge").innerHTML = 
            `<strong>Aapki Exact Age hai:</strong><br>` +
            `${years} Saal, ${months} Mahine, ${days} Din.`;

        // 5. 18 Saal ka Calculation
        var statusMsg = "";
        
        if (years >= 18) {
            statusMsg = "<span class='green-text'>✅ Aap 18 saal se upar hain. (Eligible)</span>";
        } else {
            // Target date: 18th Birthday
            var dobYear = dob.getFullYear();
            var targetYear = dobYear + 18;
            var targetDate = new Date(targetYear, dob.getMonth(), dob.getDate());
            
            // Difference in time
            var diffTime = targetDate - now;
            var diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24)); 

            statusMsg = `<span class='highlight'>⚠️ Aap abhi 18 saal ke nahi hain.</span><br>` +
                        `18 saal pura hone mein abhi <strong>${diffDays} din</strong> baki hain.`;
        }

        document.getElementById("status18").innerHTML = statusMsg;
        resultBox.style.display = "block";
    }
</script>

